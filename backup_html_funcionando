        const pages = document.querySelectorAll('.page');
        const navButtons = document.querySelectorAll('.nav-button');
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mainNav = document.getElementById('mainNav');
        const actionButtons = document.querySelectorAll('[data-page-target]');

        function showPage(pageId) {
            pages.forEach(page => {
                page.classList.remove('active');
                if (page.id === pageId) {
                    page.classList.add('active');
                }
            });
            navButtons.forEach(button => {
                button.classList.remove('active');
                if (button.dataset.page === pageId) {
                    button.classList.add('active');
                }
            });
            // Close mobile menu after navigation
            if (!mainNav.classList.contains('hidden')) {
                 mainNav.classList.add('hidden');
            }
            window.scrollTo(0,0); // Scroll to top on page change
        }

        navButtons.forEach(button => {
            button.addEventListener('click', () => {
                showPage(button.dataset.page);
            });
        });

        actionButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetPage = button.dataset.pageTarget;
                if (targetPage) {
                    showPage(targetPage);
                    // If it's a specific cultivo link, you might want to also trigger showCultivoDetalle
                    if (targetPage === 'cultivos' && button.dataset.cultivoId) {
                        showCultivoDetalle(button.textContent.trim()); // Or pass a proper name/ID
                    }
                }
            });
        });

        mobileMenuButton.addEventListener('click', () => {
            mainNav.classList.toggle('hidden');
        });

        // Ingreso/Registro Toggle
        const formIngreso = document.getElementById('formIngreso');
        const formRegistro = document.getElementById('formRegistro');
        const showRegistroBtn = document.getElementById('showRegistro');
        const showIngresoBtn = document.getElementById('showIngreso');
        const loginButton = document.getElementById('loginButton');

        showRegistroBtn.addEventListener('click', () => {
            formIngreso.style.display = 'none';
            formRegistro.style.display = 'block';
        });
        showIngresoBtn.addEventListener('click', () => {
            formRegistro.style.display = 'none';
            formIngreso.style.display = 'block';
        });
        loginButton.addEventListener('click', () => {
            // Simulate login
            alert('Ingreso simulado exitoso!');
            showPage('dashboard');
        });

        // Mis Cultivos: Lista/Detalle Toggle
        const cultivoLista = document.getElementById('cultivoLista');
        const cultivoDetalle = document.getElementById('cultivoDetalle');
        const cultivoDetalleNombre = document.getElementById('cultivoDetalleNombre');
        const cultivoDetalleSiembra = document.getElementById('cultivoDetalleSiembra');
        const cultivoDetalleFenologico = document.getElementById('cultivoDetalleFenologico');

        window.showCultivoDetalle = function(nombreCultivo) {
            cultivoLista.style.display = 'none';
            cultivoDetalle.style.display = 'block';
            cultivoDetalleNombre.textContent = nombreCultivo;
            // Populate with sample data based on nombreCultivo if needed
            if (nombreCultivo.includes("Tomates")) {
                cultivoDetalleSiembra.textContent = "15/01/2024";
                cultivoDetalleFenologico.textContent = "Fructificaci√≥n";
            } else if (nombreCultivo.includes("Fresas")) {
                cultivoDetalleSiembra.textContent = "01/03/2024";
                cultivoDetalleFenologico.textContent = "Floraci√≥n";
            } else {
                cultivoDetalleSiembra.textContent = "N/A";
                cultivoDetalleFenologico.textContent = "N/A";
            }
            renderCultivoCharts(); // Render charts for detail view
        }

        window.showCultivoLista = function() {
            cultivoDetalle.style.display = 'none';
            cultivoLista.style.display = 'grid'; // or 'block' depending on original display
        }

        // Alertas: Filter buttons
        const filterButtons = document.querySelectorAll('.filter-btn');
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                // Add actual filtering logic here if data was dynamic
                console.log('Filtrar por:', button.dataset.filter);
            });
        });


        // Chart.js Instances
        let estadoGeneralChartInstance, humedadChartInstance, temperaturaChartInstance;

        function renderEstadoGeneralChart() {
            const ctx = document.getElementById('estadoGeneralChart')?.getContext('2d');
            if (!ctx) return;
            if (estadoGeneralChartInstance) estadoGeneralChartInstance.destroy();
            estadoGeneralChartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Lun', 'Mar', 'Mi√©', 'Jue', 'Vie', 'S√°b', 'Dom'],
                    datasets: [{
                        label: 'Humedad General (%)',
                        data: [60, 62, 65, 63, 68, 70, 67],
                        borderColor: '#6A994E', // Verde Secundario
                        backgroundColor: 'rgba(106, 153, 78, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: false, suggestedMax: 100, ticks: { color: '#6c757d' } }, x: { ticks: { color: '#6c757d' } } },
                    plugins: { legend: { labels: { color: '#212529' } } }
                }
            });
        }

        function renderCultivoCharts() {
            const humedadCtx = document.getElementById('humedadChart')?.getContext('2d');
            const temperaturaCtx = document.getElementById('temperaturaChart')?.getContext('2d');

            if (humedadCtx) {
                if (humedadChartInstance) humedadChartInstance.destroy();
                humedadChartInstance = new Chart(humedadCtx, {
                    type: 'line',
                    data: {
                        labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00'],
                        datasets: [{
                            label: 'Humedad Suelo (%)',
                            data: [65, 66, 64, 60, 58, 62],
                            borderColor: '#386641', // Verde Principal
                            backgroundColor: 'rgba(56, 102, 65, 0.1)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { suggestedMax: 100, ticks: { color: '#6c757d' } }, x: { ticks: { color: '#6c757d' } } }, plugins: { legend: { labels: { color: '#212529' } } } }
                });
            }

            if (temperaturaCtx) {
                if (temperaturaChartInstance) temperaturaChartInstance.destroy();
                temperaturaChartInstance = new Chart(temperaturaCtx, {
                    type: 'line',
                    data: {
                        labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00'],
                        datasets: [{
                            label: 'Temperatura (¬∞C)',
                            data: [18, 17, 20, 25, 26, 22],
                            borderColor: '#F4A261', // Tierra Acento
                            backgroundColor: 'rgba(244, 162, 97, 0.1)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { suggestedMax: 40, ticks: { color: '#6c757d' } }, x: { ticks: { color: '#6c757d' } } }, plugins: { legend: { labels: { color: '#212529' } } } }
                });
            }
        }

        // Initial Page Load
        document.addEventListener('DOMContentLoaded', () => {
            // Default to 'ingreso' page or 'dashboard' if simulating already logged in
            const initialPage = 'ingreso'; // Or 'dashboard'
            showPage(initialPage);
            if (initialPage === 'dashboard' || document.getElementById('dashboard').classList.contains('active')) {
                 renderEstadoGeneralChart();
            }
             // Ensure nav is hidden on small screens initially if not ingreso page
            if (window.innerWidth < 768 && initialPage !== 'ingreso') { // 768px is Tailwind's md breakpoint
                mainNav.classList.add('hidden');
            } else if (window.innerWidth >= 768) {
                mainNav.classList.remove('hidden'); // Ensure nav is visible on larger screens
            }
        });

        // Handle window resize for mobile menu
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) { // md breakpoint
                mainNav.classList.remove('hidden');
            } else {
                // If not already toggled by button, hide it
                if (!mobileMenuButton.classList.contains('active')) { // Example active class on button if menu is open
                     mainNav.classList.add('hidden');
                }
            }
        });

    </script>
</body>
</html>


